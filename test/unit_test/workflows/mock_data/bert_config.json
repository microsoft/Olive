{
    "verbose": true,
    "input_model":{
        "type": "PyTorchModel",
        "config": {
            "hf_config": {
                "model_name": "Intel/bert-base-uncased-mrpc",
                "task": "text-classification"
            },
            "io_config" : {
                "input_names": ["input_ids", "attention_mask", "token_type_ids"],
                "input_shapes": [[1, 128], [1, 128], [1, 128]],
                "input_types": ["int64", "int64", "int64"],
                "output_names": ["output"]
            }
        }
    },
    "systems": {
        "local_system": {"type": "LocalSystem"},
        "aml_system": {
            "type": "AzureML",
            "config": {
                "aml_config_path": "olive-workspace-config.json",
                "aml_compute": "cpu-cluster",
                "aml_docker_config": {
                    "base_image": "mcr.microsoft.com/azureml/openmpi4.1.0-ubuntu20.04",
                    "conda_file_path": "conda.yaml"
                },
                "is_dev": true
            }
        },
        "docker_system": {
            "type": "Docker",
            "config": {
                "local_docker_config": {
                    "image_name": "olive-image",
                    "build_context_path": "docker",
                    "dockerfile": "Dockerfile"
                },
                "is_dev": true
            }
        }
    },
    "evaluators": {
        "common_evaluator": {
            "metrics":[
                {
                    "name": "accuracy",
                    "type": "accuracy",
                    "sub_type": "accuracy_score",
                    "priority_rank": 1,
                    "user_config":{
                        "post_processing_func": "post_process",
                        "user_script": "user_script.py",
                        "dataloader_func": "create_dataloader",
                        "batch_size": 1
                    },
                    "data_container": "my_container"
                },
                {
                    "name": "latency",
                    "type": "latency",
                    "sub_type": "avg",
                    "priority_rank": 2,
                    "user_config":{
                        "user_script": "user_script.py",
                        "dataloader_func": "create_dataloader",
                        "batch_size": 1
                    }
                }
            ],
            "target": "local_system"
        }
    },
    "passes": {
        "conversion": {
            "type": "OnnxConversion",
            "config": {
                "target_opset": 13
            }
        },
        "transformers_optimization": {
            "type": "OrtTransformersOptimization",
            "config": {"model_type": "bert"}
        },
        "perf_tuning": {
            "type": "OrtPerfTuning",
            "config": {
                "user_script": "user_script.py",
                "input_names": ["input_ids", "attention_mask", "token_type_ids"],
                "input_shapes": [[1, 128], [1, 128], [1, 128]],
                "input_types": ["int64", "int64", "int64"]
            }
        }
    },
    "engine": {
        "search_strategy": {
            "execution_order": "joint",
            "search_algorithm": "tpe",
            "search_algorithm_config": {
                "num_samples": 5,
                "seed": 0
            }
        },
        "evaluator": "common_evaluator",
        "host": "local_system",
        "clean_cache": false,
        "cache_dir": "cache"
    },
    "data_container": {
        "my_container": {
            "name": "glue",
            "type": "HuggingfaceContainer",
            "params_config": {
                "data_name": "glue",
                "subset": "mrpc",
                "split": "validation",
                "input_cols": ["sentence1", "sentence2"],
                "label_cols": ["label"],
                "batch_size": 1
            }
        }
    }
}
