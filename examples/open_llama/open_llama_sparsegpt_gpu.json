{
    "input_model": {
        "type": "PyTorchModel",
        "config": { "hf_config": { "model_name": "openlm-research/open_llama_3b", "task": "text-generation" } }
    },
    "systems": {
        "local_system": {
            "type": "LocalSystem",
            "config": { "accelerators": [ { "device": "gpu", "execution_providers": [ "CPUExecutionProvider" ] } ] }
        }
    },
    "data_configs": [
        {
            "name": "c4_train",
            "type": "HuggingfaceContainer",
            "load_dataset_config": {
                "params": {
                    "data_name": "allenai/c4",
                    "subset": "allenai--c4",
                    "split": "train",
                    "data_files": { "train": "en/c4-train.00000-of-01024.json.gz" }
                }
            },
            "pre_process_data_config": {
                "params": {
                    "corpus_strategy": "join-random",
                    "add_special_tokens": false,
                    "source_max_len": 2048,
                    "max_samples": 128,
                    "random_seed": 42
                }
            }
        },
        {
            "name": "wikitext2_test",
            "type": "HuggingfaceContainer",
            "load_dataset_config": {
                "params": {
                    "data_name": "wikitext",
                    "subset": "wikitext-2-raw-v1",
                    "split": "test"
                }
            },
            "pre_process_data_config": { "params": { "add_special_tokens": false, "source_max_len": 2048 } }
        }
    ],
    "evaluators": {
        "common_evaluator": {
            "metrics": [
                {
                    "name": "perplexity",
                    "type": "accuracy",
                    "sub_types": [ { "name": "perplexity" } ],
                    "data_config": "wikitext2_test"
                }
            ]
        }
    },
    "passes": {
        "sparsegpt": {
            "type": "SparseGPT",
            "config": {
                "sparsity": [ 2, 4 ],
                "data_config": "c4_train"
            }
        },
        "trt_conversion": {
            "type": "TorchTRTConversion",
            "config": { "data_config": "c4_train" }
        }
    },
    "engine": {
        "log_severity_level": 0,
        "search_strategy": false,
        "evaluator": "common_evaluator",
        "host": "local_system",
        "target": "local_system",
        "cache_dir": "cache",
        "output_dir": "models/open_llama_sparsegpt"
    }
}
