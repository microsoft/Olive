{
    "input_model":{
        "type": "PyTorchModel",
        "config": {
            "hf_config": {
                "model_name": "gpt2",
                "task": "text-generation",
                "dataset": {
                    "data_name": "ptb_text_only",
                    "subset": "penn_treebank",
                    "split": "train",
                    "input_cols": ["sentence"],
                    "seqlen": 1024,
                    "max_samples": 5,
                    "stride": 256
                }
            }
        }
    },
    "evaluators": {
        "common_evaluator": {
            "metrics":[
                {
                    "name": "perplexity",
                    "type": "accuracy",
                    "sub_types": [
                        {"name": "perplexity"}
                    ]
                }
            ]
        }
    },
    "passes": {
        "conversion": {
            "type": "OnnxConversion",
            "config": {
                "target_opset": 13
            }
        }
    },
    "engine": {
        "log_severity_level": 0,
        "search_strategy": false,
        "evaluate_input_model": true,
        "evaluator": "common_evaluator",
        "target": {
            "type": "LocalSystem",
            "config": {
                "accelerators": ["gpu"]
            }
        },
        "execution_providers": ["CPUExecutionProvider"],
        "cache_dir": "cache",
        "output_dir" : "models/bert_ptq_cpu"
    }
}
